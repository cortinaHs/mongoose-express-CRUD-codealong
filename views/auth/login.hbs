<h2>Login</h2>

  <form action="/login" method="POST">

    {{#if errorMessage}}
        <p class="warning">
            {{errorMessage}}
        </p>
    {{/if}}
 
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required/>
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" required/>
    </label>
 
    <button type="submit">Login</button>

    <div class="info">
        <p>Don't have an account? Click <a href="/signup">here</a> to signup.</p>
    </div>
 
  </form>
